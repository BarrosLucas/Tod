<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/socializar"
        android:id="@+id/social"
        android:gravity="top"
        android:layout_gravity="center_vertical"
        android:layout_alignTop="@+id/esta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modoLiv"
        android:onClick="modoLivre"
        android:layout_gravity="bottom"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/modoMis"
        android:layout_alignStart="@+id/modoMis" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/missao"
        android:id="@+id/modoMis"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="107dp" />

    <Button
        android:layout_width="121dp"
        android:layout_height="60dp"
        android:text="@string/estatistica"
        android:id="@+id/esta"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

